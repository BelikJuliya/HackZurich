<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <!-- Устанавливаем цвет обводки (фона) -->
            <solid android:color="@color/black" />
            <!-- Устанавливаем радиус скругления углов -->
            <corners android:radius="32dp" />
        </shape>
    </item>
    <!-- Добавляем вложенный item с карточкой -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <!-- Устанавливаем цвет карточки -->
            <solid android:color="@color/gray" />
            <!-- Устанавливаем радиус скругления углов карточки -->
            <corners android:radius="32dp" />
        </shape>
    </item>
</layer-list>
